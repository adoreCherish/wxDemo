.punchCard .title{
	font-family: "PingFangSC-Medium";
	color: #0f161e;
	font-size:28rpx;
	padding-top: 40rpx;
	padding-bottom:20rpx;
	display: block;
	background-color: #f1f2f6;
  padding-left:30rpx;
}
.lists view:last-child{
	border-bottom: 0;
}
.punchCard .picture{
  height: 220rpx;
  display: flex;
  flex-direction: row;
  align-items:center;
  justify-content: center;
}
.punchCard .picture text{
  color: #aaa9ae;
  font-size: 24rpx;
  font-family: "PingFangSC-Regular";
  position: relative;
  margin-top: 60rpx;
}
.punchCard .picture .icon-add{
  position: absolute;
  box-sizing: border-box;
  width: 100rpx;
  height: 100rpx;
  margin-top: -20rpx;
  /*border: 2px dashed #9a9ba3;*/
  /*background-color: #008bd6;*/
  background-color: transparent;
  /*border-radius: 50%;*/
  /*bottom: 30rpx;*/
  /*right: 30rpx;*/
}
.punchCard .picture .icon-add:before{
  content: '';
  position: absolute;
  width: 42rpx;
  height: 4rpx;
  left: 50%;
  top: 50%;
  margin-left: -20rpx;
  margin-top: -1rpx;
  background-color: #aaa9ae;
}
.punchCard .picture .icon-add:after{
  content: '';
  position: absolute;
  width: 8rpx;
  height: 84rpx;
  left: 50%;
  top: 50%;
  margin-left: -1rpx;
  margin-top: -20rpx;
  background-color: #aaa9ae;
}
.punchCard .picker{
	height:110rpx;
	line-height: 110rpx;
	border-bottom:1rpx solid #DFE0E4;
	margin-left:30rpx;
	margin-right:30rpx;
}
.punchCard .picker:last-child{
  border-bottom:0;
}
.punchCard .picker .text{
	font-family: "PingFangSC-Regular";
	color: #aaa9ae;
	font-size: 32rpx;
}
.punchCard .picker .navigator {
  padding: 20rpx 30rpx;
  position: relative;
  display: flex;
  align-items: center;
  float: right;
  margin-top:35rpx;
}
.punchCard .specailPicker {
	border-top: 20rpx solid #f1f2f6;
}
.punchCard .specailPicker .picker .navigator{
	margin-top: -20rpx;
}
.punchCard .picker .navigator:before {
  content: " ";
  position: absolute;
  left: 30rpx;
  top: 0;
  right: 30rpx;
  height: 1px;
  /*border-top: 1rpx solid #D8D8D8;*/
  color: #D8D8D8;
}
.punchCard .picker .navigator:first-child:before {
  display: none;
}
.punchCard .picker .label{
	padding-right: 20rpx;
	font-family: "PingFangSC-Medium";
	color: #0f161e;
	float: left;
	font-size: 32rpx;
}
.punchCard .picker .navigator-text {
  /*flex: 1;*/
  font-size: 32rpx;
  color: #4286f5;
}
.navigator-arrow {
  /*padding-right: 26rpx;
  /*position: relative;*/
}
.punchCard .picker .navigator-arrow:after {
  content: " ";
  display: inline-block;
  height: 18rpx;
  width: 18rpx;
  border-width: 2rpx 2rpx 0 0;
  border-color: #888888;
  border-style: solid;
  transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
  position: absolute;
  top: 50%;
  margin-top: -8rpx;
  /*right: 28rpx;*/
  right:4rpx;
}
.punchCard .punchCardContent .content{
	padding-left: 30rpx;
	padding-right: 30rpx;
	padding-top: 30rpx;
}
.punchCard .punchCardContent textarea{
	border: 1rpx solid #e5e5e5;
	/*margin-left: 30rpx;*/
	/*margin-right: 30rpx;*/
	border-radius: 5rpx;
	width: 100%;
	height: 180rpx;
	padding-left: 20rpx;
	padding-top: 20rpx;
	font-size: 24rpx;
	font-family: "PingFangSC-Regular";
	color: #aaa9ae;
	box-sizing: border-box;
}
.punchCard .punchCardContent .function{
	margin-top: 30rpx;
	display:flex;
	flex-direction: row;
	align-items: center;
	justify-content: center;
}
.punchCard .punchCardContent .function  view{
	text-align: center;
	margin-bottom: 35rpx;
}
.punchCard .punchCardContent .function image{
	width: 40rpx;
	height: 40rpx;
	border: 1px solid red;
}
.punchCard .punchCardContent .function text{
	display: block;
	color: #0f161e;
	font-size: 28rpx;
	font-family: "PingFangSC-Regular";
}
.punchCard .footer {
	background-color: #f1f2f6;
	padding-top: 60rpx;
	padding-bottom: 20rpx;
}
.punchCard .footer button{
	height: 92rpx;
	line-height: 92rpx;
	background-color: #3bb35b;
	color: white;
	margin-left: 30rpx;
	margin-right: 30rpx;
	border-radius: 5rpx;
	font-family: "PingFangSC-Regular";
}